{
  "name": "gotify-ui",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "prestart": "yarn prebuild",
    "start": "webpack-dev-server --config webpack.config.dev.js",
    "prebuild": "rimraf dist/ tsconfig*.tsbuildinfo",
    "build": "webpack --config webpack.config.production.js",
    "lint": "prettier --write src/ --loglevel warn && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx src/",
    "clean": "rimraf yarn.lock node_modules/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./*.{ts,js,tsx,jsx}": [
      "prettier --loglevel warn --write",
      "eslint --fix"
    ],
    "./*.{json,md,yml,yaml}": [
      "prettier --loglevel warn --write"
    ],
    "./*.{go}": [
      "gofmt -w"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "axios": "^0.20.0",
    "codemirror": "^5.57.0",
    "detect-browser": "^5.1.1",
    "js-base64": "^3.4.5",
    "mobx": "^5.15.6",
    "mobx-react": "^6.3.0",
    "mobx-utils": "^5.6.1",
    "notifyjs": "^3.0.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-codemirror2": "^7.2.1",
    "react-dom": "^16.4.2",
    "react-infinite": "^0.13.0",
    "react-markdown": "^4.0.6",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-timeago": "^4.1.9",
    "remove-markdown": "^0.3.0",
    "typeface-roboto": "0.0.75"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@cenk1cenk2/cz-cc": "^1.2.2",
    "@cenk1cenk2/eslint-config": "^0.4.9",
    "@types/codemirror": "0.0.98",
    "@types/detect-browser": "^4.0.0",
    "@types/jest": "^26.0.13",
    "@types/js-base64": "^3.0.0",
    "@types/node": "^14.10.0",
    "@types/notifyjs": "^3.0.2",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-infinite": "0.0.35",
    "@types/react-router-dom": "^5.1.5",
    "@types/remove-markdown": "^0.1.1",
    "@types/rimraf": "^3.0.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-styled-components": "^1.11.1",
    "commitizen": "^4.2.1",
    "core-js": "^3.6.5",
    "css-loader": "^4.3.0",
    "eslint": "^7.8.1",
    "eslint-plugin-react": "^7.20.6",
    "file-loader": "^6.1.0",
    "fork-ts-checker-webpack-plugin": "^5.1.0",
    "html-webpack-plugin": "^4.4.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^4.1.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "4.0.2",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./ui/node_modules/@cenk1cenk2/cz-cc"
    }
  }
}
